<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="Accessories"
                location="applications"/>
  <shortcut
    name="$APP_NAME"
    target="java"
    commandLine="-jar &quot;$INSTALL_PATH/wremja-launcher.jar&quot;"
    workingDirectory="$INSTALL_PATH"
    description="Time tracking application for projects."
    encoding="UTF-8"
    iconFile="$INSTALL_PATH/Wremja-Tray.png"
    iconIndex="0"
    initialState="maximized"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no"
    type="Application"
    Categories="Application;Utility"
    >
    <!-- desktop="no" : Desktop-Icon doesn't work on Gnome (KDE should work) -->

    <createForPack name="Base"/>
  </shortcut>
</shortcuts>
